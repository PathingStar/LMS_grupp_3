@using LMS.Shared.DTOs.EntityDto
@inject NavigationManager nav

<li class="list-group-item d-flex justify-content-between align-items-center activity-item"
    @onclick="@(() => nav.NavigateTo($"activities/{Activity.Id}"))"
    style="cursor: pointer;">
    <div class="flex-grow-1">
        <strong class="text-primary">@Activity.Name</strong>
        <br />
        <small class="text-muted">
            @Activity.StartDate.ToString("MMM dd HH:mm") – @Activity.EndDate.ToString("HH:mm")
        </small>
    </div>

    <AuthorizeView Roles="Teacher">
        <div class="ms-2">
            <button class="btn btn-sm btn-outline-secondary"
                    @onclick:stopPropagation="true"
                    @onclick="StartEditing">
                Edit
            </button>
        </div>
    </AuthorizeView>
</li>

@code {
    [Parameter] public ModuleActivityDto Activity { get; set; }
    [Parameter] public EventCallback<Guid> OnMessageSent { get; set; }

    private async Task StartEditing()
    {
        await OnMessageSent.InvokeAsync(Activity.Id);
    }
}